<h2  class="page-header">Search Book</h2>

<form action="/books" method="GET">

    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">

        </div>
    </div>
    
    <div class="form-row">
        <div class="form-item">
            <label>Published After</label>
            <input type="text" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
    
        <div class="form-item">
            <label>Published Before</label>
            <input type="text" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>

   
    
<!--why-->
</form>

<div>
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <!--book.coverImagePath comes from the book model-->
            <img height="150" width="100" src="<%=book.coverImagePath%>">
        </a>
    <% }) %>
</div>
